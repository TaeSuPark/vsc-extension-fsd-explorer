{
  "name": "fsd-creator",
  "displayName": "fsd-creator",
  "description": "FSD 아키텍처 구조를 쉽게 생성하는 도구",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:fsdExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fsd-creator.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "fsd-creator.initializeFsd",
        "title": "FSD: Initialize FSD Structure",
        "icon": "$(project)"
      },
      {
        "command": "fsd-creator.createDomain",
        "title": "FSD: Create Slice",
        "icon": "$(add)"
      },
      {
        "command": "fsd-creator.openSettings",
        "title": "FSD: Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "fsd-creator.refreshExplorer",
        "title": "Refresh FSD Explorer",
        "icon": "$(refresh)"
      },
      {
        "command": "fsd-creator.createFile",
        "title": "New File",
        "icon": "$(new-file)"
      },
      {
        "command": "fsd-creator.createFolder",
        "title": "New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "fsd-creator.rename",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "fsd-creator.delete",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "fsd-creator.fixViolation",
        "title": "Fix FSD Rule Violation",
        "icon": "$(tools)"
      },
      {
        "command": "fsd-creator.openFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "fsdExplorer",
          "name": "FSD Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "fsd-creator.initializeFsd",
          "when": "view == fsdExplorer",
          "group": "navigation@1"
        },
        {
          "command": "fsd-creator.createDomain",
          "when": "view == fsdExplorer",
          "group": "navigation@2"
        },
        {
          "command": "fsd-creator.openSettings",
          "when": "view == fsdExplorer",
          "group": "navigation@3"
        },
        {
          "command": "fsd-creator.refreshExplorer",
          "when": "view == fsdExplorer",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "fsd-creator.createFile",
          "when": "view == fsdExplorer && viewItem == folder",
          "group": "navigation@1"
        },
        {
          "command": "fsd-creator.createFolder",
          "when": "view == fsdExplorer && viewItem == folder",
          "group": "navigation@2"
        },
        {
          "command": "fsd-creator.rename",
          "when": "view == fsdExplorer",
          "group": "7_modification@1"
        },
        {
          "command": "fsd-creator.delete",
          "when": "view == fsdExplorer",
          "group": "7_modification@2"
        },
        {
          "command": "fsd-creator.fixViolation",
          "when": "view == fsdExplorer && viewItem == fsdViolation",
          "group": "inline"
        },
        {
          "command": "fsd-creator.openFile",
          "when": "view == fsdExplorer && (viewItem == file || viewItem == fsdViolation)",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "FSD Creator",
      "properties": {
        "fsd-creator.language": {
          "type": "string",
          "default": "en",
          "enum": [
            "en",
            "ko"
          ],
          "enumDescriptions": [
            "English",
            "한국어"
          ],
          "description": "Language for the extension UI"
        },
        "fsd-creator.initFolders": {
          "type": "object",
          "default": {
            "entities": true,
            "features": true,
            "pages": true,
            "widgets": true,
            "shared": true,
            "app": true
          },
          "description": "Folders to create during FSD initialization"
        },
        "fsd-creator.domainLayers": {
          "type": "object",
          "default": {
            "entities": true,
            "features": true,
            "pages": true,
            "widgets": true
          },
          "description": "Layers available for slice creation"
        },
        "fsd-creator.layerStructure": {
          "type": "object",
          "default": {
            "entities": {
              "model": true,
              "api": true,
              "ui": false,
              "lib": false,
              "config": false,
              "consts": false
            },
            "features": {
              "model": true,
              "api": true,
              "ui": true,
              "lib": false,
              "config": false,
              "consts": false
            },
            "pages": {
              "model": true,
              "api": false,
              "ui": true,
              "lib": false,
              "config": false,
              "consts": false,
              "createComponent": true
            },
            "widgets": {
              "model": true,
              "api": false,
              "ui": true,
              "lib": false,
              "config": false,
              "consts": false
            }
          },
          "description": "Structure of each layer for domain creation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
